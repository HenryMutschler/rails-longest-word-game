<h1>New Game</h1>

<div class="grid">
<%@letters.each do |letter| %>
<span class="letter"><%= letter %></span>
<% end %>
</div>

<div class="answer">
  <form action="/score" method="get" class="">
    <input type="text" class="form" name="your_try" id="try" placeholder="Type your best attempt here!">
    <button type="submit" class="button">Play!</button>
  </form>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</div>